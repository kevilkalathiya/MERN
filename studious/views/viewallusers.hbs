<script>
      //  delete user
      function deleteData() {

        //console.log("inside function click",event.target.dataset.id) 
        //console.log("inside function click",event.target.dataset.tmaruname)
        let userId = event.target.dataset.id

        fetch('deletedata/' + userId, { method: 'DELETE',})
